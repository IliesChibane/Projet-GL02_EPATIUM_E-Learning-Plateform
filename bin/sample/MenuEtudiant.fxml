<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="870.0" prefWidth="888.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MenuEtudiantControleur">
   <children>
      <BorderPane fx:id="etudiantPane" prefHeight="870.0" prefWidth="1200.0">
         <left>
            <VBox alignment="CENTER" prefHeight="317.0" prefWidth="175.0" styleClass="blue-pane" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="140.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="nom" prefHeight="17.0" prefWidth="134.0" text="Nom" textFill="#82c46c">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="prenom" prefHeight="17.0" prefWidth="134.0" text="Prénom" textFill="#82c46c">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="id" prefHeight="17.0" prefWidth="134.0" text="Matricule" textFill="#82c46c">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#getEmploi" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Emploi du temps">
                     <font>
                        <Font name="Arial Bold" size="10.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getDrive" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Cours">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getDevoir" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Devoirs">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getNotes" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Notes">
                     <font>
                        <Font name="Arial Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getEnseignants" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Enseignants">
                     <font>
                        <Font name="Arial Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getClassroom" prefHeight="100.0" prefWidth="100.0" styleClass="rounded-btn" text="Accueil">
                     <font>
                        <Font name="Arial Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" onMouseEntered="#showDeco" onMouseExited="#hideDeco" prefHeight="90.0" prefWidth="78.0">
                     <children>
                        <Button fx:id="decon" mnemonicParsing="false" onMouseClicked="#deco" prefHeight="70.0" prefWidth="70.0" styleClass="rounded-btn" text="Déconnexion">
                           <font>
                              <Font name="System Bold" size="9.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="775.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
