<AnchorPane fx:id="anchorpane" maxHeight="661.0" maxWidth="797.0" prefHeight="625.0" prefWidth="797.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ClassroomController">
   <children>
      <BorderPane maxHeight="650.0" maxWidth="797.0" prefHeight="650.0" prefWidth="797.0">
         <top>
            <HBox prefHeight="68.0" prefWidth="811.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" />
                  <VBox prefHeight="100.0" prefWidth="353.0">
                     <children>
                        <Label prefHeight="83.0" prefWidth="195.0" styleClass="titleB" text="Classroom" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </top>
         <bottom>
            <TextField fx:id="contenu" alignment="CENTER" prefHeight="74.0" prefWidth="697.0" promptText="Votre annonce" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font></TextField>
         </bottom>
         <center>
            <ScrollPane fx:id="sp" fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
              </content>
            </ScrollPane>
         </center>
         <left>
            <Button fx:id="publier" mnemonicParsing="false" onAction="#publier" prefHeight="58.0" prefWidth="52.0" styleClass="rounded-btn" text="Publier" BorderPane.alignment="CENTER">
               <font>
                  <Font size="8.0" />
               </font>
            </Button>
         </left>
         <right>
            <ComboBox fx:id="module" onAction="#ButtonActiver" prefWidth="150.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
</AnchorPane>
